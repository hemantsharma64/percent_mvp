# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
# For development, you can use a local PostgreSQL instance or a cloud provider
DATABASE_URL=postgresql://username:password@localhost:5432/percent_mvp

# Application Environment
NODE_ENV=development

# OpenAI API Configuration (required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Session Configuration
SESSION_SECRET=your_secure_session_secret_here

# Optional: Replit Authentication (if using Replit)
REPL_ID=your_repl_id
REPL_SLUG=your_repl_slug